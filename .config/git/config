[user]
	name = SAITOU Keita
	email = keita44.f4@gmail.com
[color]
	ui = auto
	status = auto
	diff = auto
	log = auto
	branch = auto
[alias]
	h = help
	co = checkout
	ci = commit
	cif = commit --amend --no-edit
	st = status --short --branch
	br = branch
	l = log --graph --date=format:'%Y/%m/%d(%a) %T %z'
	a = add .
	addw = !git diff --ignore-all-space --no-color | git apply --cached
	aw = !git diff --ignore-all-space --no-color | git apply --cached
	addp = add --patch
	ap = add --patch
	diffs = diff --staged
	diffw = diff --color-words
	pushf = push --force-with-lease
	blames = blame -s
	cp = cherry-pick
	rbi = rebase --interactive
	tags = tag --list
	fetch1 = !git branch --show-current | xargs -I '{}' git fetch --depth 1 origin '{}'
[core]
	editor = emacsclient
	pager = delta --color-only
[interactive]
	diffFilter = delta --color-only
[delta]
	keep-plus-minus-markers = false
	hunk-header-style = blue bold ul
	file-style = yellow
	plus-style = syntax darkgreen
	plus-emph-style = syntax forestgreen
	minus-style = syntax maroon
	minus-emph-style = syntax crimson
[push]
	autoSetupRemote = true
[merge]
	conflictstyle = zdiff3
[rebase]
	autostash = true
	autosquash = true
	rebaseMerges = true
[blame]
	date=format:%m/%d(%a)%R
[help]
	autocorrect = 1
[rerere]
	enable = true
[commit]
	verbose = true
[diff]
	algorithm = patience
	submodule = log
	context = 7
[pull]
	ff = only
[init]
	defaultBranch = main
[status]
	submoduleSummary = true
[submodule]
	recurse = true
[branch]
	sort = -committerdate
[credential]
	helper = store --file ~/.config/git/credentials
[url "https://github.com/"]
	insteadOf = git@github.com:
